<p class="col-md-6 col-lg-4 mb-5">Please log in to leave a comment</p>
<div class="card col-md-6 col-lg-4 mb-5">
    <div class="card-header">
        <h5 class="card-title float-left">{{post.title}}</h5>
        <h7 class="card-subtitle mb-2 float-right">Posted by {{post.user.username}} on {{formatDate post.created_at}}</h7>
    </div>

    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
</div>

    <div class="card-body comment">
    {{>commentcard post.comments}}
    </div>
</div>

<input type="hidden" name="post-id" value="{{post.id}}"/>

{{#if loggedIn}}
<div class="card">
    <div class="card-header"></div>
    <form class="card-body comment-form">
        <p class="form-label">Leave a comment:</p>
        <textarea class="form-input" id="comment" name="comment-body"></textarea>
        <button type="submit" class="btn btn-primary">Submit comment</button>
    </form>
</div>
{{/if}}

<script src="/js/comment.js"></script>